{
    "require": {
        "php": "~8.2",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "laminas/laminas-diactoros": "^2.24",
        "slim/twig-view": "^3.3",
        "twig/intl-extra": "^3.5",
        "doctrine/orm": "^2.14",
        "symfony/cache": "^6.2",
        "php-di/php-di": "^7.0",
        "ramsey/uuid-doctrine": "^2.0",
        "doctrine/common": "^3.4",
        "laminas/laminas-validator": "^2.30",
        "twilio/sdk": "^6.44",
        "laminas/laminas-inputfilter": "*",
        "mezzio/mezzio-flash": "^1.6",
        "mezzio/mezzio-twigrenderer": "^2.13",
        "mezzio/mezzio-session": "^1.12",
        "mezzio/mezzio-session-ext": "^1.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "doctrine/data-fixtures": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/"
        }
    },
    "scripts": {
        "serve": [
            "php -S 0.0.0.0:8080 -t public/"
        ],
        "test": "phpunit --colors=always",
        "docker-test": "docker compose exec php composer test"
    }
}

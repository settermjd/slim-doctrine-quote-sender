{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "laminas/laminas-diactoros": "^2.24",
        "slim/twig-view": "^3.3",
        "twig/intl-extra": "^3.5",
        "doctrine/orm": "^2.14",
        "symfony/cache": "^6.2",
        "php-di/php-di": "^7.0",
        "ramsey/uuid-doctrine": "^2.0",
        "doctrine/common": "^3.4",
        "laminas/laminas-validator": "^2.30"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "doctrine/data-fixtures": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/"
        }
    },
    "scripts": {
        "serve": [
            "php -S 0.0.0.0:8080 -t public/"
        ],
        "test": "phpunit --colors=always"
    }
}

{% extends '@layout/default.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="bg-white rounded-md border-2 border-slate-100 drop-shadow-sm p-4 md:pt-0 lg:p-8 grid grid-rows-2 lg:grid-rows-none lg:grid-cols-2">
        <div class="lg:w-10/12 w-full lg:ml-4 my-auto">
            <h1 class="mb-3 text-3xl lg:text-4xl font-extrabold text-slate-800 text-left">Daily Developer Quotes</h1>
            <h2 class="lg:mb-3 text-lg lg:text-xl text-slate-800 text-left">
                We're sorry to see you go.
                But, if you no longer want to receive a daily developer quote, no worries.
                Just enter your email address and submit the form.
                Boom.
                No more quotes.
            </h2>
        </div>
        <div class="lg:mr-4 my-auto">
            {% if error %}
                <div class="py-2 rounded-md bg-red-200 font-bold text-red-700 mb-4 px-3 p-2 flex flex-row">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         width="32"
                         class="icon-thumbs-down fill-red-700 inline-block mr-2">
                        <path class="primary"
                              d="M11 19.2l-2.92-6.8A1 1 0 0 1 8 12V4c0-1.1.9-2 2-2h6c1.5 0 3.11 1.06 3.7 2.45l2.22 5.16A1 1 0 0 1 22 10v2a3 3 0 0 1-3 3h-4v4a3 3 0 0 1-3 3 1 1 0 0 1-1-1v-1.8z"/>
                        <rect width="4" height="11" x="2" y="2" class="secondary" rx="1" transform="rotate(180 4 7.5)"/>
                    </svg>
                    <span class="">{{ error }}</span>
                </div>
            {% endif %}
            {% if status %}
                <div class="py-2 rounded-md bg-green-200 font-bold text-green-700 mb-4 px-3 py-2 flex flex-row">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         width="32"
                         class="icon-thumbs-up fill-green-700 inline-block mr-2">
                        <path class="primary"
                              d="M13 4.8l2.92 6.8a1 1 0 0 1 .08.4v8a2 2 0 0 1-2 2H8a4.28 4.28 0 0 1-3.7-2.45L2.07 14.4A1 1 0 0 1 2 14v-2a3 3 0 0 1 3-3h4V5a3 3 0 0 1 3-3 1 1 0 0 1 1 1v1.8z"/>
                        <rect width="4" height="11" x="18" y="11" class="secondary" rx="1"/>
                    </svg>
                    <div class="pt-1">{{ status }}</div>
                </div>
            {% endif %}
            <hr class="lg:hidden block w-full mt-1 md:mt-0 mb-3">
            <form action="{{ action_route }}" method="post">
                <label>
                    <span class="text-slate-800 font-bold">Email address:</span>
                    <input type="email" name="email" class="border-2 rounded-md border-slate-200 p-2 my-2 w-full">
                </label>
                <input type="submit"
                       name="submit"
                       value="Subscribe"
                       class="rounded-md bg-violet-800 text-white py-3 p-2 w-full font-bold mt-0 cursor-pointer hover:drop-shadow-md hover:bg-violet-900 ease-in-out transition duration-200">
            </form>
            <p class="pt-2">If you change your mind, <a class="underline decoration-slate-500 decoration-2 hover:decoration-slate-700 ease-in-out transition duration-200" href="/subscribe/by-email-address">you can always resubscribe</a>.</p>
        </div>
    </div>
{% endblock %}
